<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pickerview_color_white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pickerview_line_color" />

    <RelativeLayout
        android:id="@+id/pickerview_topLayou"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/pickerview_color_top" >

        <TextView
            android:id="@+id/pickerview_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="取消"
            android:textColor="@color/pickerview_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pickerview_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="完成 "
            android:textColor="@color/pickerview_text_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- <View
        android:layout_width="match_parent" 
        android:layout_height="1dp"
        android:background="@color/pickerview_line_color" /> -->

    <LinearLayout
        android:id="@+id/pickerview_bottomLayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/pickerview_topLayou" >
    </LinearLayout>

</RelativeLayout>