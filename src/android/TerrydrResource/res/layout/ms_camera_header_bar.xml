<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/top_menu_bar_height"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_weight="3"
    android:background="@color/transparent_background"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/return_index_bt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:text="@string/cance_bt_tv"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size" />

    <TextView
        
        android:id="@+id/ms_camera_tv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/camera_tv"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:enabled="false"
        android:id="@+id/complete_bt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingRight="10dip"
        android:text="@string/ms_complete_bt"
       	android:textColor="@color/ms_font_color_gray"
        android:textSize="@dimen/text_size" />

</LinearLayout>